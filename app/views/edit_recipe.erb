<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
    <label for="name">Name: </label>
    <input name="name" value="<%= @recipe.name %>" type="text"><br>
    <label for="ingredients">Ingredients: </label>
    <input name="ingredients" value="<%= @recipe.ingredients %>" type="text"><br>
    <label for="cook_time">Cook Time: </label>
    <input name="cook_time" value="<%= @recipe.cook_time %>" type="text"><br>
  <input type="submit">
</form>
